{
    "extends": "airbnb-base",
    "eslintConfig": {
        "name": "linter",
        "version": "1.0.0",
        "env": {
            "browser": true,
            "es6": true,
            "node": true,
            "jquery": true
        }
    },
    "parserOptions": {
        "ecmaVersion": 9,
        "sourceType": "script",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "curly": "all",
        "eqeqeq": "all",
        "array-bracket-newline": "never",
        "no-unused-vars": ["error", {"vars": "all", "args": "after-used", "ignoreRestSiblings": false}],
        "no-undef-init": "error",
        "no-undef": "error",
        "no-useless-return": "error",
        "no-return-assign": ["error", "always"],
        "no-param-reassign": ["error", {"props": false }],
        "no-empty-function": "error",
        "one-var": ["error", {"var": "never", "let": "never", "const": "never"}],
        "semi": ["error", "always"],
        "semi-spacing": ["error", {"before": false, "after": true}],
        "semi-style": ["error", "last"],
        "spaced-comment": ["error", "never"],
        "object-property-newline": ["error", {"allowAllPropertiesOnSameLine": false}],
        "no-whitespace-before-property": "error",
        "no-trailing-spaces": ["error", {"skipBlankLines": true, "ignoreComments": false}],
        "no-multiple-empty-lines": ["error", {"max": 1, "maxBOF": 0, "maxEOF": 0}],
        "no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
        "new-parens": "error",
        "lines-around-comment": ["error", {"beforeBlockComment": true, "beforeLineComment": true, "allowClassStart": true, "allowClassEnd": false, "allowBlockStart": true, "allowBlockEnd": false}],
        "keyword-spacing": ["error", {"after": false}],
        "key-spacing": ["error", {"beforeColon": false, "afterColon": true}],
        "indent": ["error", "tab", {"ignoreComments": "false", "VariableDeclarator": {"var": "tab", "let": "tab", "const": "tab"}}],
        "function-paren-newline": ["error", "never"],
        "func-call-spacing": ["error", "never"],
        "eol-last": ["error", "never"],
        "comma-style": ["error", "last"],
        "comma-spacing": ["error", {"before": false, "after": true}],
        "comma-dangle": ["error", "never", {"functions": "never"}],
        "camel-case": ["error", {"properties": "always"}],
        "brace-style": ["error", "1tbs", {"allowSingleLine": false}],
        "array-element-newline": ["error", {"multiline": true}],
        "global-require": "error",
        "prefer-const": "error",
        "arrow-spacing": ["error", {"before": true, "after": true}],
        "no-var": "error",
        "quotes": ["error", "single", {"avoidEscape": true, "avoidTemplateLiterals": false}]
    }

}