{{#contentFor "pageStyles"}}
<link href="/stylesheets/cafe.css" rel="stylesheet">
{{/contentFor}}

<div class="bg">
    <div class="container">
        <div class="row mt left heading">
            <div class="col-lg-6">
                <h1 style="font-size:48px">{{cafe}}</h1>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
            </div>
            <div class="row-sm-6 col-sm-offset-8">
                <img src="/images/smokeys.jpg" alt="smokey's logo">
            </div>
        </div>
        </div><!-- /container -->

        <!-- IMAGES -->
        <div class="container">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- INDICATORS -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="2" class="active"></li>
                </ol>

                <!-- WRAPPER FOR SLIDES -->
                <div class="carousel-inner">
                    <div class="item active">
                        <div class="col-lg-6 col-lg-offset-2">
                            <img class="img-fluid" src="/images/coffeesteam.jpg" width="700" height="400" alt="Coffee">
                        </div>
                    </div>

                    <div class="item">
                        <div class="col-lg-6 col-lg-offset-2">
                            <img src="/images/Smokey's.jpg" width="700" height="400" alt="Smokey's">
                        </div>
                    </div>

                     <div class="item">
                         <div class="col-lg-6 col-lg-offset-2">
                             <img src="/images/muffin.jpg" width="700" height="400" alt="Muffin">
                         </div>
                    </div>
                </div>

                <!-- LEFT AND RIGHT CONTROLS -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div><!-- /container -->

            <!-- MENU HEADING -->
            <div class="container">
                <div class="col-sm-6">
                    <p class="title">Menu</p>
                </div>
            </div><!-- /container -->

            <!-- MENU BOARD -->
            <div class="container">
                <div class="col-sm-4">
                    <div class="menu-body">
                        <!-- Start of lunch menu -->
                        <p class="menu-section-title">Lunch</p>
                        <!-- Item starts -->
                        <div class="menu-item">
                            <div class="menu-item-name">
                                Sandwich
                            </div>
                            <div class="menu-item-price">
                                €3.95
                            </div>
                        </div>
                        <!-- Item ends -->
                        <!-- Item starts -->
                        <div class="menu-item">
                            <div class="menu-item-name">
                                Panini/Bap
                            </div>
                            <div class="menu-item-price">
                                €4.50
                            </div>
                        </div>
                        <!-- Item ends -->
                        <!-- Item starts -->
                        <div class="menu-item">
                            <div class="menu-item-name">
                                Salad
                            </div>
                            <div class="menu-item-price">
                                €3.95
                            </div>
                        </div>
                        <!-- Item ends -->
                        <!-- Item starts -->
                        <div class="menu-item">
                            <div class="menu-item-name">
                                Chocolate Bar
                            </div>
                            <div class="menu-item-price">
                                0.90c
                            </div>
                        </div>
                        <!-- Item ends -->
                    </div>
                </div>
                <!-- End of lunch menu -->
                <!-- Start of drinkd menu -->
                <div class="row-sm-4 col-sm-offset-8">
                    <p class="menu-section-title">Drinks</p>
                    <!-- Item starts -->
                    <div class="menu-item">
                        <div class="menu-item-name">
                            Regualar Coffee (12oz)
                        </div>
                        <div class="menu-item-price">
                            €1.30
                        </div>
                    </div>
                    <!-- Item ends -->
                    <!-- Item starts -->
                    <div class="menu-item">
                        <div class="menu-item-name">
                            Regular Tea (12oz)
                        </div>
                        <div class="menu-item-price">
                            €1.00
                        </div>
                    </div>
                    <!-- Item ends -->
                    <!-- Item starts -->
                    <div class="menu-item">
                        <div class="menu-item-name">
                            Americano
                        </div>
                        <div class="menu-item-price">
                            €1.60
                        </div>
                    </div>
                    <!-- Item ends -->
                    <!-- Item starts -->
                    <div class="menu-item">
                        <div class="menu-item-name">
                            Latte
                        </div>
                        <div class="menu-item-price">
                            €2.00
                        </div>
                    </div>
                    <!-- Item ends -->
                <!-- End of drinks menu -->
                </div>
            </div>
        </div><!--/container -->

        <!-- REVIEWS -->
        <div class="container">
            <div class="row mt left ">
                <div class="col-sm-6">
                    <p class="title">Reviews</p>
                    <p>Niamh Downey</p>
                    <p>"The blueberry muffins are to die for!"</p>
                </div>

                <div class="row-sm-6 col-sm-offset-8">
                    <p class="title">Opening Hours:</p>
                    <p>Monday - Friday:   8.30a.m. - 9p.m.</p>
                </div>
            </div>
        </div><!-- /container -->

        <!-- REVIEW BOX -->
        <div class="container">
            <div class="row col-sm-4">
                <div class="row col-xs-10 col-xs-offset-1">
                    <h3 class="text-left">{{hbsHelpers.username}}</h3>
                    <form class="form-horizontal" role="form" id="postForm">
                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-2">
                                    <textarea class="form-control required" style="min-width: 100%" rows="3" id="inputPost" placeholder="Leave a Review?" maxlength="140"></textarea>
                                    <label id="charRemaining" for="inputPost">140</label>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-1">
                                <button type="text" class="btn btn-primary">Post Review</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="row col-sm-8 col-sm-offset-2" id="feedPosts">

                </div>
            </div>
            <!-- MAP -->
            <div class="row-sm-4 col-sm-offset-8">
                 <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2385.550089581624!2d-9.062390284348465!3d53.2796804874039!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x485b96f3c4d10eed%3A0x4c679f3aad43d0bd!2sSmokey&#39;s+Cafe!5e0!3m2!1sen!2sie!4v1519309237153" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
    </div><!-- /container -->
